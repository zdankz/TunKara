<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="300" android:exitFadeDuration="300">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="180" android:endColor="#F3CE60" android:startColor="#645E20" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:endColor="#0083B0" android:startColor="#70A1AC" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>